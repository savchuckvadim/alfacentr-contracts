{
    "extends": "@workspace/typescript-config/base.json",
          "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
          "@/*": ["./*"]
        }
      },
          "include": [
        "src/**/*"
      ],
    "exclude": ["node_modules"]
  }